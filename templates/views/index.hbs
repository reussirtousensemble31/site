{{!< default}}

<script>
    $(function() {
        // summary:
        //      Adjust this section to window height
        var h = $(window).height() - $('.navbar').height() - 90;

        $('#imageTitle').height(h);
    });
</script>

<section id="imageTitle">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <h1>Partageons ensemble dans le sport !</h1>
            </div>
        </div>
    </div>
</section>

<section class="section u-pad-b-0" id="menu">
    <div class="container">
        <div class="row">
            {{# each data.sections}}
                <a href="#{{ancre}}">
                <div class="col-sm-4 text-center">
                    <div class="rounded-topic section-color-green">
                        <i class="fa {{nomIcone}} fa-5x"></i>
                        <div class="title">{{titre}}</div>
                    </div>
                </div>
                </a>
            {{/each}}
            <div class="col-sm-4 text-center">
                <a href="#planning">
                <div class="rounded-topic section-color-green">
                    <i class="fa fa-calendar fa-5x"></i>
                    <div class="title">Planning</div>
                </div>
                </a>
            </div>
        </div>
    </div>
</section>

{{# each data.sections}}
    <section id="{{ancre}}" class="{{#if alt}}section-alt{{else}}section{{/if}} ">
        <div class="container">
            <div class="row">
                <div style="display: flex;">
                    <i class="fa {{nomIcone}} fa-5x"></i>
                    <h2 style="flex:1; margin-left:20px;margin-right:20px">
                        {{titre}}
                    </h2>
                </div>
            </div>
            <div class="row">
                {{{contenu}}}
            </div>
        </div>
    </section>
{{/each}}

